{% extends 'MinsalSiapsBundle::standard_layout.html.twig' %}
{%block stylesheets %}
    {{parent()}}
<link rel="stylesheet" href="{{ asset('bundles/minsalsiaps/css/MntPacienteAdmin/form-edit.css') }}" type="text/css" media="all" />  
{%endblock%}
{%block javascripts %}
    {{parent()}}
<script src="{{ asset('bundles/minsalsiaps/js/datepicker/jquery.ui.datepicker-es.js') }}" type="text/javascript"></script>
<script src="{{ asset('bundles/minsalsiaps/js/maskedinput/jquery.maskedinput.js') }}" type="text/javascript"></script>
<script src="{{ asset('bundles/minsalsiaps/js/MntPacienteAdmin/MntPaciente_edit.js') }}" type="text/javascript"></script>
<script src="{{ asset('bundles/minsalsiaps/js/funciones_generales.js') }}" type="text/javascript"></script>
{%endblock%}

{% block form %}
    {% set url = admin.id(object) ? 'edit' : 'create' %}
    
    {% if not admin.hasRoute(url)%}
<div>
            {{ "form_not_available"|trans({}, "SonataAdminBundle") }}
    </div>
    {% else %}

    <form id="form_paciente" class="form-horizontal" action="{{ admin.generateUrl(url, {'id': admin.id(object), 'uniqid': admin.uniqid, 'subclass': app.request.get('subclass')}) }}" {{ form_enctype(form) }} method="POST">
            {% if form.vars.errors|length > 0 %}
            <div class="sonata-ba-form-error">
                    {{ form_errors(form) }}
                </div>
            {% endif %}
                <div class="tab-content">
                    
                    {% for name, form_group in admin.formgroups %}
                        <div class="tab-pane {% if loop.first %} active{% endif %}" id="{{ admin.uniqid }}_{{ name|sonata_slugify }}">
                            <fieldset>
                                <div class="sonata-ba-collapsed-fields">
                                    {% if form_group.description != false %}
                                        <p>{{ form_group.description|raw }}</p>
                                    {% endif %}
                                                                              {% if admin.hasroute('list') and admin.isGranted('LIST')%}
    <a style="position:relative;left:385px" class="btn sonata-action-element" href="{{ admin.generateUrl('list') }}">
        <i class="icon-list"></i>
        {{ 'link_action_list'|trans({}, 'SonataAdminBundle') }}</a>
{% endif %}
                                        <table class="dat_paciente" border="0">
                                            <tr class="dat_paciente_sec">
                                                <td colspan="4">A.Nombre del Paciente</td>
                                            </tr>
                                            <tr class="dat_paciente_content">
                                                <td width='50%'>{{form_row(form[form_group.fields.primerApellido])}}</td>
                                                <td width=''>{{form_row(form[form_group.fields.segundoApellido])}}</td>
                                            </tr>
                                            <tr>
                                                <td>{{form_row(form[form_group.fields.primerNombre])}}</td>
                                                <td>{{form_row(form[form_group.fields.segundoNombre])}}</td>
                                            </tr>
                                            <tr>
                                                <td>{{form_row(form[form_group.fields.tercerNombre])}}</td>
                                                <td>{{form_row(form[form_group.fields.apellidoCasada])}}</td>
                                            </tr>
                                            <tr>
                                                <td>{{form_row(form[form_group.fields.conocidoPor])}}</td>
                                            </tr>
                                            <tr class="dat_paciente_sec">
                                                <td colspan="4">B.Datos del Nacimiento</td>
                                            </tr>
                                            <tr>
                                                <td>{{form_row(form[form_group.fields.fechaNacimiento])}}</td>
                                                <td>{{form_row(form[form_group.fields.horaNacimiento])}}</td>
                                            </tr>
                                            <tr>
                                                <td><label>Edad:</label><input id="edad" type="text" maxlength="25"></td>
                                                <td>{{form_row(form[form_group.fields.idSexo])}}</td>
                                            </tr>
                                            <tr>
                                                <td>{{form_row(form[form_group.fields.idPaisNacimiento])}}</td>
                                                <td>{{form_row(form[form_group.fields.idDepartamentoNacimiento])}}</td>
                                            </tr>
                                            <tr>
                                                <td>{{form_row(form[form_group.fields.idMunicipioNacimiento])}}</td>
                                                <td>{{form_row(form[form_group.fields.idNacionalidad])}}</td>
                                            </tr>
                                            <tr class="dat_paciente_sec">
                                                <td colspan="4">C.Datos de Identificaci√≥n</td>
                                            </tr>
                                            <tr>
                                                <td>{{form_row(form[form_group.fields.idDocPaciente])}}</td>
                                                <td>{{form_row(form[form_group.fields.numeroDocIdePaciente])}}</td>
                                            </tr>
                                            <tr>
                                                <td>{{form_row(form[form_group.fields.idEstadoCivil])}}</td>
                                                <td>{{form_row(form[form_group.fields.idOcupacion])}}</td>
                                            </tr>
                                            <tr>
                                                <td>{{form_row(form[form_group.fields.idDepartamentoDomicilio])}}</td>
                                                <td>{{form_row(form[form_group.fields.idMunicipioDomicilio])}}</td>
                                            </tr>
                                            <tr>
                                                <td>{{form_row(form[form_group.fields.areaGeograficaDomicilio])}}</td>
                                                <td>{{form_row(form[form_group.fields.idCantonDomicilio])}}</td>
                                            </tr>
                                            <tr>
                                                <td colspan="4">{{form_row(form[form_group.fields.direccion])}}</td>
                                            </tr>
                                            <tr>
                                                <td>{{form_row(form[form_group.fields.telefonoCasa])}}</td>
                                            </tr>
                                            <tr class="dat_paciente_sec">
                                                <td colspan="4">D.Datos Laborales</td>
                                            </tr>
                                            <tr>
                                                <td>{{form_row(form[form_group.fields.asegurado])}}</td>
                                                <td>{{form_row(form[form_group.fields.idAreaCotizacion])}}</td>
                                            </tr>
                                            <tr>
                                                <td>{{form_row(form[form_group.fields.cotizante])}}</td>
                                                <td>{{form_row(form[form_group.fields.numeroAfiliacion])}}</td>
                                            </tr>
                                            <tr>
                                                <td>{{form_row(form[form_group.fields.lugarTrabajo])}}</td>
                                                <td>{{form_row(form[form_group.fields.telefonoTrabajo])}}</td>
                                            </tr>
                                            <tr class="dat_paciente_sec">
                                                <td colspan="4">E.Datos Familiares</td>
                                            </tr>
                                            <tr>
                                                <td>{{form_row(form[form_group.fields.nombrePadre])}}</td>
                                                <td>{{form_row(form[form_group.fields.nombreMadre])}}</td>
                                            </tr>
                                            <tr>
                                                <td >{{form_row(form[form_group.fields.nombreConyuge])}}</td><td></td>
                                            </tr>
                                            <tr>
                                                <td>{{form_row(form[form_group.fields.idParentescoResponsable])}}</td>
                                                <td>{{form_row(form[form_group.fields.nombreResponsable])}}</td>
                                            </tr>
                                            <tr>
                                                <td>{{form_row(form[form_group.fields.telefonoResponsable])}}</td>
                                            </tr>
                                            <tr>
                                                <td>{{form_row(form[form_group.fields.idDocResponsable])}}</td>
                                                <td>{{form_row(form[form_group.fields.numeroDocIdeResponsable])}}</td>
                                            </tr>
                                            <tr>
                                                <td colspan="4">{{form_row(form[form_group.fields.direccionResponsable])}}</td>
                                            </tr>
                                            <tr class="dat_paciente_sec">
                                                <td colspan="4">F.Persona que Proporcion√≥ Datos</td>
                                            </tr>
                                            <tr>
                                                <td colspan="4">
                                                   {{form_row(form[form_group.fields.idParentescoProporDatos])}}
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td >{{form_row(form[form_group.fields.nombreProporcionoDatos])}}</td>
                                                    <td>{{form_row(form[form_group.fields.idDocProporcionoDatos])}}</td>
                                                </tr>
                                                <tr>
                                                    <td>{{form_row(form[form_group.fields.numeroDocIdeProporDatos])}}</td>
                                                </tr>
                                                <tr class="dat_paciente_sec">
                                                    <td colspan="4">G.Otros</td>
                                                </tr>
                                                <tr>
                                                    <td colspan="4">{{form_row(form[form_group.fields.observacion])}}</td>
                                                </tr>
                                                <tr class="dat_paciente_sec">
                                                    <td colspan="4">H.N√∫mero de Expediente</td>
                                                </tr>
                                                <tr>
                                                    <td colspan="4" >{{form_row(form[form_group.fields.expedientes])}}</td>
                                                </tr>
                                            </table>
                                        </div>
                                    </fieldset>
                                </div>
                    {% endfor %}
                            </div>

            {% block sonata_post_fieldsets %}
                        </div>
            {% endblock %}

               {{ form_rest(form) }}

            {% block formactions %}
                        <div class="well form-actions">
                    {% if app.request.isxmlhttprequest %}
                        {% if admin.id(object) %}
                                <input type="submit" class="btn btn-primary" name="btn_update" value="{{ 'btn_update'|trans({}, 'SonataAdminBundle') }}"/>
                        {% else %}
                                <input type="submit" class="btn" name="btn_create" value="{{ 'btn_create'|trans({}, 'SonataAdminBundle') }}"/>
                        {% endif %}
                    {% else %}
                        {% if admin.supportsPreviewMode %}
                                <input class="btn btn-info persist-preview" name="btn_preview" type="submit" value="{{ 'btn_preview'|trans({}, 'SonataAdminBundle') }}"/>
                        {% endif %}
                        {% if admin.id(object) %}
                                <input type="submit" class="btn btn-primary" name="btn_update_and_edit" value="{{ 'btn_update_and_edit_again'|trans({}, 'SonataAdminBundle') }}"/>

                            {% if admin.hasroute('list') %}
                                <input type="submit" class="btn" name="btn_update_and_list" value="{{ 'btn_update_and_return_to_list'|trans({}, 'SonataAdminBundle') }}"/>
                            {% endif %}

                                <!--{ if admin.hasroute('delete') and admin.isGranted('DELETE', object) %}
                                    { 'delete_or'|trans({}, 'SonataAdminBundle') }}
                                    <a class="btn btn-danger" href="{ admin.generateObjectUrl('delete', object) }}">{ 'link_delete'|trans({}, 'SonataAdminBundle') }}</a>
                                { endif %}-->
                        {% else %}
                                <!--input class="btn btn-primary" type="submit" name="btn_create_and_edit" value="{{ 'btn_create_and_edit_again'|trans({}, 'SonataAdminBundle') }}"/-->
                                <input type="submit" class="btn btn-primary" name="btn_create_and_list" value="Guardar"/>
                            {% if admin.hasroute('list') and admin.isGranted('LIST')%}
                                <a class="btn sonata-action-element" href="{{ admin.generateUrl('list') }}">
                                    <i class="icon-list"></i>
        {{ 'link_action_list'|trans({}, 'SonataAdminBundle') }}</a>
{% endif %}
                                                       <!-- <input class="btn" type="submit" name="btn_create_and_create" value="{{ 'btn_create_and_create_a_new_one'|trans({}, 'SonataAdminBundle') }}"/>-->
                        {% endif %}
                    {% endif %}
                            </div>
            {% endblock formactions %}
                        </form>
    {% endif%}

{% endblock %}